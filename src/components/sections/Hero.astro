---
import { Picture } from "astro:assets";
import HeroHeadingSVG from "@assets/images/cheznous_hero-text.svg?raw";

import HeroImg from "@assets/images/cheznous_hero.jpg";

interface Props {
    title?: string;
    className?: string;
}
const { title = "", className = "" } = Astro.props;
---

<section id="hero-header" class={`c-hero ${className}`}>
    <div class="c-hero__content">
        <div class="c-hero__heading">
            {title && <h2 class="text-hero__heading" set:html={title} />}
        </div>
        <div set:html={HeroHeadingSVG} />
        <figure class="c-hero__background">
            <div class="c-hero__overlay"></div>
            <Picture
                src={HeroImg}
                alt="Pizza napolitaine maison garnie de feuilles de basilic frais, entourée d'ingrédients méditerranéens sur une table rustique."
                loading="eager"
                fetchpriority="high"
                widths={[540, 720, 960, HeroImg.width]}
                sizes={`(max-width: 768px) 540px,
                            (max-width: 1024px) 720px,
                            (max-width: 1536px) 960px,
                            ${HeroImg.width}px`}
            />
        </figure>
    </div>
</section>

<style>
    .c-hero__overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            135deg,
            rgba(0, 0, 0, 0.4) 0%,
            rgba(0, 0, 0, 0.2) 50%,
            rgba(0, 0, 0, 0.3) 100%
        );
        z-index: 1;
        pointer-events: none;
    }

    .c-hero__overlay {
        background: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 0.5) 0%,
            rgba(0, 0, 0, 0.2) 50%,
            rgba(0, 0, 0, 0.4) 100%
        );
    }

    .c-hero__content > *:not(.c-hero__background) {
        position: relative;
        z-index: 2;
    }
</style>
