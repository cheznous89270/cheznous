---
import { Picture } from "astro:assets";
import HeroHeadingSVG from "@assets/images/cheznous_hero-text.svg?raw";
import HeroImg from "@assets/images/cheznous_hero.png";
interface Props {
    title?: string;
    className?: string;
}

const { title = "", className = "" } = Astro.props;
---

<section id="hero-header" class={`c-hero ${className}`}>
    <div class="c-hero__content">
        <div class="c-hero__heading">
            {title && <h2 class="text-hero__heading" set:html={title} />}
        </div>
        <div set:html={HeroHeadingSVG} />
        <figure class="c-hero__background">
            <Picture
                src={HeroImg}
                alt="Pizza napolitaine maison garnie de feuilles de basilic frais, entourée d'ingrédients méditerranéens sur une table rustique."
                loading="eager"
                fetchpriority="high"
                widths={[540, 720, 960, HeroImg.width]}
                sizes={`(max-width: 768px) 540px,
                            (max-width: 1024px) 720px,
                            (max-width: 1536px) 960px,
                            ${HeroImg.width}px`}
            />
        </figure>
    </div>
</section>
