---
import { ContentSection } from "@components/index";
import type { RestaurantEntry } from "../../types/content";

interface Props {
    groupedRestaurants: RestaurantEntry[][];
    restaurantText: {
        heading?: string;
        subheading?: string;
        paragraph?: string;
    };
}

const { groupedRestaurants, restaurantText } = Astro.props;
---

<ContentSection
    groupedItems={groupedRestaurants}
    sectionText={restaurantText}
    sectionId="restaurant"
/>
