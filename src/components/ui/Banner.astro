---
import { getEntry } from "astro:content";
import Phone from "@assets/icons/phone.svg";
import Accessibility from "@assets/icons/accessibility.svg";

interface Props {
    generalInfo: string;
    additionalInfo: string;
}

const { generalInfo, additionalInfo } = Astro.props;

const siteConfig = await getEntry("site", "settings");
const { contact } = siteConfig?.data ?? {};
const { phone_link: phoneLink, phone } = contact ?? {};
---

<div class="c-banner">
    <div class="c-banner__content">
        <div class="c-banner__info">
            <span class="c-banner__info-icon">
                <Phone />
            </span>
            <span class="c-banner__info-text">
                {generalInfo}
            </span>
            <span class="c-banner__info-number">
                <a href={`tel:${phoneLink}`}>{phone}</a>
            </span>
        </div>
        <div class="c-banner__accessibility">
            <span class="c-banner__accessibility-text">
                {additionalInfo}
            </span>
            <span class="c-banner__info-icon">
                <Accessibility />
            </span>
        </div>
    </div>
</div>
