---
import "@styles/index.css";
import { Schema } from "astro-seo-schema";
import { Seo } from "astro-seo-meta";

import {
    Header,
    Banner,
    Footer,
    FooterSlogan,
    PopUpClosure,
} from "@components/index";

const { isLegalPage = false } = Astro.props;


import "@fontsource/metropolis/300.css";
import "@fontsource/metropolis/400.css";
import "@fontsource-variable/fraunces/wght.css";
import metropolis300Woff2 from "@fontsource/metropolis/files/metropolis-latin-300-normal.woff2?url";
import metropolis400Woff2 from "@fontsource/metropolis/files/metropolis-latin-400-normal.woff2?url";
import frauncesWoff2 from "@fontsource-variable/fraunces/files/fraunces-latin-wght-normal.woff2?url";

import { getEntry } from "astro:content";

const closureEntry = await getEntry("closure", "closure-text");
const isPopupVisible = closureEntry?.data?.closure?.isVisible;

const siteConfig = await getEntry("site", "settings");
const {
    slogan: siteSlogan,
    site_title: siteTitle,
    description: siteDescription,
} = siteConfig?.data ?? {};
const {
    accueil,
    mentions_legales: mentionsLegales,
    politique_de_confidentialite: politiqueDeConfidentialite,
} = siteDescription ?? {};

const currentPath = Astro.url.pathname;

const getDescriptionForPath = (path: string) => {
    if (path === "/" || path === "/accueil") return accueil;
    if (path === "/mentions-legales") return mentionsLegales;
    if (path === "/politique-de-confidentialite")
        return politiqueDeConfidentialite;
    return accueil;
};

const canonicalUrl = new URL(currentPath, Astro.site).toString();
---

